- model_class = Broker

= simple_form_for [:admin, @broker], wrapper: :pages_form2 do |f|
  .row
    .col-lg-6  
      .row
        .col-lg-12.col-xl-12.m-b-10
          .card.widget-12.no-border.widget-loader-circle.no-margin
            .card-header
              .card-title
                =t 'edit', scope: :'helpers.titles.edit', :model => model_class.model_name.human.titleize
            .card-block
              == render 'form', f: f, model_class: model_class
      .row
        .col-lg-12.col-xl-12.m-b-10
          /! START WIDGET widget_tableWidgetBasic
          .card.widget-12.no-border.widget-loader-circle.no-margin
            .padding-25
              .pull-left
                h2.text-success.no-margin Checklist
                p.no-margin Today's sales
              h3.pull-right.semi-bold
                sup
                  / small.semi-bold $
                / | 102,967
              .clearfix
            .card-block
              .table-responsive
                table.table.table-condensed.table-hover
                  tbody
                    - @broker.documents.each do |document|
                      tr
                        td.font-montserrat.all-caps.fs-12.w-50 = document.name
                        / td.text-right.hidden-lg
                        /   span.hint-text.small dewdrops
                        / td.text-right.b-r.b-dashed.b-grey.w-25
                        /   span.hint-text.small Qty 1
                        td.w-25
                          span.font-montserrat.fs-18 = document.state
            .padding-25.mt-auto
              p.small.no-margin
                a href="#" 
                  i.fa.fs-16.fa-arrow-circle-o-down.text-success.m-r-10
                span.hint-text Show more details of APPLE . INC
      = f.input :comment, placeholder: model_class.human_attribute_name(:comment), input_html:{class: 'input-lg'}
      .row
        .padding-25
          .pull-left
            = f.submit nil, :class => 'btn btn-primary'
            '
            = link_to t('back', scope: "helpers.links"), admin_brokers_path, :class => 'btn'
    .col-lg-6
      .timeline-container.left
        .p-l-25
          .pull-left
            h3.text-success.no-margin Proposals
        section.timeline
          - @broker.proposals.each do |proposal|
            .timeline-block
              .timeline-point.success
                i.pg-map
              /! timeline-point
              .timeline-content
                /! START CARD ELEMENT
                .card.social-card.share.full-width
                  .circle data-toggle="tooltip" title="Label" 
                  .card-header.clearfix
                    h5= proposal.value
                    h6
                      = proposal.state
                      / span.location.semi-bold
                        i.fa.fa-map-marker
                        '
                        = proposal.unit.name
                  .card-description
                    p= proposal.negociate
                      a href="#"  #quote
                    .via 
                      | Unit
                      '
                      = proposal.unit.name
                /! END CARD ELEMENT
                / .event-date
                /   h6.font-montserrat.all-caps.hint-text.m-t-0 Apple Inc
                /   small.fs-12.hint-text 15 January 2015, 06:50 PM
              /! timeline-content
            / .timeline-block
              | \...
          /! timeline

