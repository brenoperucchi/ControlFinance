.row
  .col-lg-8.col-sm-12.col-md-12
    .row
      .col-lg-12.col-sm-12.col-xs-12.col-md-12
        .card#build
          .card-description
            .row.padding-10
              .col-lg-5
                img.img-responsive alt="user" src="#{@build.image('fit400')}"
              .col-lg-7
